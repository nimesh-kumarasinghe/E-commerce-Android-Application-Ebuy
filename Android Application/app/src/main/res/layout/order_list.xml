<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="356dp"
        android:layout_height="11dp"
        android:backgroundTint="#F6F6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="356dp"
        android:layout_height="189dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_order_pqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sulphur_point"
                android:text="Order Quantity"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/txt_order_pprie"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_pprie" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Staus"
                app:layout_constraintStart_toStartOf="@+id/txt_order_date"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_date" />

            <TextView
                android:id="@+id/txt_order_pname"
                android:layout_width="176dp"
                android:layout_height="74dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sulphur_point_bold"
                android:text="Name"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/img_order_item"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_order_item"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.355"
                app:srcCompat="@drawable/item" />

            <TextView
                android:id="@+id/txt_order_date"
                android:layout_width="156dp"
                android:layout_height="19dp"
                android:fontFamily="@font/sulphur_point"
                android:text="Order Date"
                android:textColor="#373737"
                app:layout_constraintStart_toStartOf="@+id/txt_order_pqty"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_pqty" />

            <TextView
                android:id="@+id/txt_order_pprie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sulphur_point_bold"
                android:text="LKR 1500"
                android:textColor="#000000"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="@+id/txt_order_pname"
                app:layout_constraintTop_toBottomOf="@+id/txt_order_pname" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>